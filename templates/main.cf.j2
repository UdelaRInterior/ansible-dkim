# See /usr/share/postfix/main.cf.dist for a commented, more complete version
{% if postfix_smtpd_banner is defined %}
smtpd_banner = {{ postfix_smtpd_banner }}
{% endif %}

{% if postfix_biff is defined %}
biff = {{ postfix_biff }}
{% endif %}

# Uncomment the next line to generate "delayed mail" warnings
{% if postfix_delay_warning_time is defined %}
delay_warning_time = {{ postfix_delay_warning_time }}
{% endif %}

# appending .domain is the MUA's job.
{% if postfix_append_dot_mydomain is defined %}
append_dot_mydomain = {{ postfix_append_dot_mydomain }}
{% endif %}

{% if postfix_readme_directory is defined %}
readme_directory = {{ postfix_readme_directory }}
{% endif %}

# TLS parameters
{% if postfix_smtpd_tls_cert_file is defined %}
smtpd_tls_cert_file= {{ postfix_smtpd_tls_cert_file }}
{% endif %}
{% if postfix_smtpd_tls_key_file is defined %}
smtpd_tls_key_file= {{ postfix_smtpd_tls_key_file }}
{% endif %}
{% if postfix_smtpd_use_tls is defined %}
smtpd_use_tls= {{ postfix_smtpd_use_tls }}
{% endif %}
{% if postfix_smtpd_tls_session_cache_database is defined %}
smtpd_tls_session_cache_database = {{ postfix_smtpd_tls_session_cache_database }}
{% endif %}
{% if postfix_smtp_tls_session_cache_database is defined %}
smtp_tls_session_cache_database = {{ postfix_smtp_tls_session_cache_database }}
{% endif %}

{% if postfix_virtual_alias_domains is defined %}
virtual_alias_domains = {{ postfix_virtual_alias_domains | join(",") }}
{% endif %}

{% if postfix_virtual_alias_maps is defined %}
virtual_alias_maps = {{ postfix_virtual_alias_maps }}
{% endif %}
{% if postfix_myhostname is defined %}
myhostname = {{ postfix_myhostname }}
{% endif %}
{% if postfix_alias_maps is defined %}
alias_maps = {{ postfix_alias_maps }}
{% endif %}
{% if postfix_alias_database is defined %}
alias_database = {{ postfix_alias_database }}
{% endif %}
mydestination =	{{ postfix_mydestination | join(",") }}
relayhost = {{ postfix_relayhost }}
mynetworks = {{ postfix_mynetworks }}
mailbox_command = {{ postfix_mailbox_command }}
mailbox_size_limit = {{ postfix_mailbox_size_limit }}
recipient_delimiter = {{ postfix_recipient_delimiter }}
inet_interfaces = {{ postfix_inet_interfaces }} 
message_size_limit = {{ postfix_message_size_limit }}

compatibility_level = {{ postfix_compatibility_level }}
